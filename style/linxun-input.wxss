.linxun-input {
  display: flex;
  margin: 32rpx 24rpx 24rpx 24rpx;
  padding: 12rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #ccc;
  height: 60rpx;
  line-height: 60rpx;
  position: relative;
}

.linxun-upload {
  height: 120rpx;
  line-height: 120rpx;
}

.linxun-input>.label {
  height: 100%;
  flex: 3;
}

.linxun-input>.input {
  height: 100%;
  flex: 5;
}

.linxun-right {
  height: 100%;
  flex: 5;
  display: flex;
  align-items: center;
}

.linxun-right>.input {
  flex: 6;
}

.linxun-right>.img-box {
  flex: 1;
  text-align:right;
  display: flex;
  align-items: center;
}

.linxun-right>.get-phone {
  flex: 3;
  margin-top: 0;
  padding: 0 16rpx;
}

.linxun-right>.img-box>image {
  width: 56rpx;
  height: 56rpx;
}

.upload {
  width: 118rpx;
  height: 118rpx;
  margin-right: 24rpx;
  margin-bottom: 0;
  border: 1rpx solid #d9d9d9;
}

.upload>.weui-uploader__img {
  width: 100%;
  height: 100%;
}

.upload_success {
  position: relative;
}

.upload_success>.delete {
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  width: 48rpx;
  height: 48rpx;
}