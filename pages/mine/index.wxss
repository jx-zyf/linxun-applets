/* pages/mine/index.wxss */
.header {
  color: #fff;
  background: var(--primaryColor);
  display: flex;
  padding: 36rpx;
}

.img {
  width: 120rpx;
  height: 120rpx;
}

.img>image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.welcome {
  margin-left: 36rpx;
}

.welcome .name {
  font-size: 36rpx;
  line-height: 70rpx;
}

.welcome .extra {
  font-size: 26rpx;
  line-height: 50rpx;
  color: #eee;
}

.btn-box {
  height: 80rpx;
  width: 100%;
  text-align: center;
  padding: 20rpx 0;
}

.btn {
  color: #333;
}

.container {
  background: #eee;
  min-height: calc(100vh - 192rpx);
}

.menus {
  padding: 0 36rpx;
  border-radius: 8rpx;
  background: #fff;
}

.menu {
  padding: 24rpx 0;
  display: flex;
  border-bottom: 1px solid #eee;
}

.menu:last-child {
  border: none;
}

.image {
  width: 50rpx;
  height: 50rpx;
}

.image>image {
  max-width: 50rpx;
  max-height: 50rpx;
  /* vertical-align: middle; */
}

.title {
  margin-left: 24rpx;
  flex: auto;
  line-height: 50rpx;
}

.title .extra {
  float: right;
  font-size: 28rpx;
  color: #555;
}

.icon_right {
  float: right;
  width: 30rpx;
  height: 30rpx;
  padding: 10rpx 0;
  vertical-align: middle;
}