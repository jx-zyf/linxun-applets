/* pages/basicInfo/index.wxss */
.container {
  min-height: 100vh;
  background: #eee;
}

.info-box {
  background: #fff;
  margin: 24rpx 0;
  border-radius: 6rpx;
}

.info {
  display: flex;
  border-bottom: 1px solid #eee;
  justify-content: space-between;
}

.info:last-child {
  border: none;
}

.img-box {
  height: 120rpx;
}

.img-box text {
  padding: 0 24rpx !important;
  line-height: 120rpx;
}

.img-box .img {
  padding: 20rpx;
  width: 80rpx;
  height: 80rpx;
}

.img>image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  vertical-align: middle;
}

.info text {
  padding: 24rpx;
  font-size: 30rpx;
}

.info text:last-child {
  color: #555;
  font-size: 28rpx;
}

.option {
  padding-top: 48rpx;
}

.btn {
  width: 100% !important;
  padding: 20rpx 0;
}