@import '../../style/weui.wxss';

.linxun-input-box {
  margin: 0 12rpx 24rpx 12rpx;
  padding: 12rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.linxun-input-label {
  display: inline-block;
  width: 100%;
  height: 100%;
  padding: 12rpx 0;
}

.linxun-value {
  height: 100%;
  display: flex;
  align-items: center;
  padding-top: 12rpx;
}

.linxun-input {
  flex: 6;
}

.linxun-red {
  color: red;
}

.linxun-placeholder {
  visibility: hidden;
}

.linxun-error-msg {
  position: absolute;
  top: 100%;
  left: 16rpx;
  width: 100%;
  color: red;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
}